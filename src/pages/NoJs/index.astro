const HeaderAppName = "Header App";

const getDataName = () => {
  return new Promise((res, rej) => {
    res("Image List App");
  });
};
---

<div class={styles.container}>
  <div class={styles.headerApp}>{HeaderAppName}</div>
  <div class={styles.menuApp}>Menu HTML</div>
  <div class={styles.mainApp}>
    <div class={styles.filterApp}>Filter App</div>
